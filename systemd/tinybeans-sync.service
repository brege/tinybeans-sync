[Unit]
Description=Sync Tinybeans photos
After=network.target

[Service]
Type=oneshot
User=tinybeans
Group=tinybeans
WorkingDirectory=/opt/tinybeans
ExecStart=/opt/tinybeans/.venv/bin/python /opt/tinybeans/cli.py --data /var/lib/tinybeans-sync --config /var/lib/tinybeans-sync/config.yaml --from-last-date --daemon
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
